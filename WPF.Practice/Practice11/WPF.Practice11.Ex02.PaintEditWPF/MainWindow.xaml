        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Practice11.Ex02.PaintEditWPF"
        mc:Ignorable="d"
        Title="Ink Pad" Height="550" Width="370" Background="LightGray">
    <Grid>
        <InkCanvas x:Name="inkCanvas1"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Background="LightYellow" />
