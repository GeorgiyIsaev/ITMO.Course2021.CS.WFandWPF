<Window x:Class="WpfResources2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Ресурсы" Height="250" Width="300">
    <Window.Resources>
        <col:ArrayList x:Key="phones">
            <sys:String>iPhone</sys:String>
            <sys:String>Nexus</sys:String>
            <sys:String>Lumia</sys:String>
            <sys:String>Xiaomi</sys:String>
        </col:ArrayList>
    </Window.Resources>
   
    <Grid>
        <ListBox ItemsSource="{StaticResource phones}" />
    </Grid>
</Window>



