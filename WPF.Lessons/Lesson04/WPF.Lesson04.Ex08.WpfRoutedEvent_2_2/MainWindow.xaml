<Window TextBoxBase.TextChanged="Window_TextChanged_1"  x:Class="WpfRoutedEvent_2_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid TextBoxBase.TextChanged="Grid_TextChanged_1" TextInput="Grid_TextInput" PreviewKeyDown="Grid_PreviewKeyDown">
        <TextBox x:Name="txtBox" HorizontalAlignment="Left" Height="23" Margin="30,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged_1" PreviewTextInput="txtBox_PreviewTextInput" KeyDown="txtBox_KeyDown" PreviewKeyDown="txtBox_PreviewKeyDown"/>
        <RadioButton x:Name="radBut1" Content="Обработка события в Textbox" HorizontalAlignment="Left" Margin="30,121,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radBut2" Content="Обработка события в Grid" HorizontalAlignment="Left" Margin="30,161,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radBut3" Content="Обработка события в Window" HorizontalAlignment="Left" Margin="30,201,0,0" VerticalAlignment="Top"/>
        <StackPanel ButtonBase.Click="StackPanel_Click_1"  HorizontalAlignment="Left" Height="45" Margin="350,44,0,0" VerticalAlignment="Top" Width="100">
            <Button x:Name="butAdd" Content="x+x"/>
            <Button x:Name="butMult" Content="x*x"/>
        </StackPanel>


    </Grid>
</Window>
